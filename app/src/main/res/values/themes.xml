<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/LightTheme_primary</item>
        <item name="colorPrimaryVariant">@color/LightTheme_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LightTheme_primary</item>
        <item name="colorSecondaryVariant">@color/LightTheme_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="customRelativeLayoutBgColor">@color/white</item>
        <item name="customTextViewTextColor">@color/black</item>
        <item name="customMainCardBgColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>