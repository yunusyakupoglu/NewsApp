<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.news.newsapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/news_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/news_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsApp" >
        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".views.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.FileListActivity"
            android:exported="false" />
        <activity
            android:name=".views.FileAddActivity"
            android:exported="false"
            android:label="@string/title_activity_file_add"
            android:theme="@style/Theme.NewsApp.NoActionBar" />
        <activity
            android:name=".views.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".views.NavigationActivity"
            android:exported="false" />
        <activity
            android:name=".views.NewsListActivity"
            android:exported="false" />
        <activity
            android:name=".views.MainActivity"
            android:exported="false" />
        <activity
            android:name=".views.NewsAddActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>